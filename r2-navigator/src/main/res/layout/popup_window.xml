<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:gravity="end"
    android:orientation="horizontal"
    android:padding="10dp">

    <TabHost
        android:id="@+id/tabhost"
        android:layout_width="200dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/Settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="14dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/icon_decrease" />

                        <SeekBar
                            android:id="@+id/brightness"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/icon_increse" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/font_decrease"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/white"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/icon_font_decrease" />

                        <ImageButton
                            android:id="@+id/font_increase"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/white"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/icon_font_increase" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="20dp"
                            android:gravity="center_horizontal"
                            android:text="Font" />


                        <Spinner
                            android:id="@+id/spinner_action_settings_intervall_values"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dialog"
                            />
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/appearance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">


                        <RadioButton
                            android:id="@+id/appearance_default"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/rbtn_selector"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Default"
                            android:textColor="@drawable/rbtn_textcolor_selector" />

                        <RadioButton
                            android:id="@+id/appearance_sepia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/rbtn_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Sepia"
                            android:textColor="@drawable/rbtn_textcolor_selector" />

                        <RadioButton
                            android:id="@+id/appearance_night"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/rbtn_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Night"
                            android:textColor="@drawable/rbtn_textcolor_selector" />

                        </RadioGroup>

                    <Switch
                        android:id="@+id/scroll_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Scroll mode" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Advanced"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    
                <LinearLayout
                    android:id="@+id/Advanced_Body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                   >
                    <Switch
                        android:id="@+id/publisher_default"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Original" />

                    <RadioGroup
                        android:id="@+id/TextAlignment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >


                        <RadioButton
                            android:id="@+id/alignment_justify"
                            android:layout_width="wrap_content"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:background="@drawable/rbtn_selector"
                            android:button="@null"
                            android:checked="true"
                            android:drawableTop="@drawable/icon_justify_white"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textColor="@drawable/rbtn_textcolor_selector" />

                        <RadioButton
                            android:id="@+id/alignment_left"
                            android:layout_width="wrap_content"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:background="@drawable/rbtn_selector"
                            android:button="@null"
                            android:drawableTop="@drawable/icon_left"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textColor="@drawable/rbtn_textcolor_selector" />

                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="20dp"
                            android:gravity="center_horizontal"
                            android:text="Columns" />

                        <RadioGroup
                            android:id="@+id/columns"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <RadioButton
                                android:id="@+id/column_auto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/rbtn_selector"
                                android:button="@null"
                                android:checked="true"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Auto"
                                android:textColor="@drawable/rbtn_textcolor_selector" />

                            <RadioButton
                                android:id="@+id/column_one"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/rbtn_selector"
                                android:button="@null"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="1"
                                android:textColor="@drawable/rbtn_textcolor_selector" />

                            <RadioButton
                                android:id="@+id/column_two"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/rbtn_selector"
                                android:button="@null"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="2"
                                android:textColor="@drawable/rbtn_textcolor_selector" />

                        </RadioGroup>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/pm_decrease"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/white"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_minus" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="100"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Page Margins" />

                            <TextView
                                android:id="@+id/pm_display"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.75" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/pm_increase"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/white"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_plus" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/ws_decrease"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/white"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_minus" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="100"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Word Spacing" />

                            <TextView
                                android:id="@+id/ws_display"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="auto" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/ws_increase"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/white"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_plus" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/ls_decrease"

                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/white"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_minus" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="100"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Letter Spacing" />

                            <TextView
                                android:id="@+id/ls_display"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="auto" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/ls_increase"

                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/white"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_plus" />

                    </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/lh_decrease"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/white"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_minus" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="100"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Line Height" />

                            <TextView
                                android:id="@+id/lh_display"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="auto" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/lh_increase"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/white"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_plus" />

                    </LinearLayout>

                </LinearLayout>

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>

